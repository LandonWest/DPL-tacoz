<%= nested_form_for [:admin, @menu_item] do |menu_item_form| %>
  <%= menu_item_form.label :name %>:
  <%= menu_item_form.text_field :name %><br>

  <%= menu_item_form.label :price %>:
  <%= menu_item_form.text_field :price %><br>

  <%= menu_item_form.label :description %>:
  <%= menu_item_form.text_field :description %><br>

  <%= menu_item_form.label :vegetarian %>:
  <%= menu_item_form.check_box :vegetarian %><br>

  <%= menu_item_form.label :picture %>:
  <%= menu_item_form.file_field :picture %>

  <p><%= menu_item_form.link_to_add "Add ingredient", :ingredients %></p>
  <%= menu_item_form.fields_for(:ingredients) do |ingredient_form| %>
    <div class="form-group">
      Ingredient: <%= ingredient_form.text_field(:name, placeholder: 'name') %>
    </div>
    <div class="form-group">
      Calories: <%= ingredient_form.number_field(:calories) %>
    </div>
    <p><%= ingredient_form.link_to_remove "Remove Ingredient" %></p>
  <% end %>

  <%= menu_item_form.submit %>
<% end %>
